<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiscordClone.Views.ProfilePage"
               BackgroundColor="#1C2023"
             >
    <Grid RowDefinitions=".1*,.8*" RowSpacing="-60">

       

            <FlexLayout JustifyContent="End"
                        Grid.Row="0"
                       
                        AlignContent="Start"
                        Background="#1065c0">
                <Border  BackgroundColor="Gray"
                     Stroke="Gray"
                     HeightRequest="50"
                     WidthRequest="50"
                     StrokeShape="RoundRectangle 50"
                         Margin="5"
                     
                     >

                    <Image Source="shop.png" WidthRequest="30" Aspect="AspectFit"/>
                </Border>

                <Border  BackgroundColor="Gray"
                     Stroke="Gray"
                     HeightRequest="50"
                     Margin="5"
                     WidthRequest="100"
                     StrokeShape="RoundRectangle 10">
                    <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
                        
                        <Image Source="shop.png" WidthRequest="20" Aspect="AspectFit"/>
                        <Label Text="Nitro" Style="{StaticResource titleText}" TextColor="Snow" />
                    </HorizontalStackLayout>

                </Border>

                <Border  BackgroundColor="Gray"
                         Stroke="Gray"
                         HeightRequest="50"
                         Margin="5"
                         WidthRequest="50"
                         StrokeShape="RoundRectangle 50">
                
                <Image Source="settings.png" WidthRequest="30" Aspect="AspectFit"/>
            </Border>
        </FlexLayout>

        <Grid RowDefinitions=".4*,.7*" Grid.Row="1"   Margin="10">
            <!--Header section-->
            <VerticalStackLayout Grid.Row="0">
                <HorizontalStackLayout >
                    <Border Stroke="#272A2F"
                            StrokeThickness="7"
                            StrokeShape="RoundRectangle 50"
                            WidthRequest="100"
                            HeightRequest="100"
                            Background="snow"
                            >
                        <Image Source="gintama.webp" WidthRequest="60" Aspect="AspectFill" />
                    </Border> 
                    
                    
                    
                </HorizontalStackLayout>
                <HorizontalStackLayout>

                    <Label Text="lebo_hang_022102" Style="{StaticResource titleText}" />
                </HorizontalStackLayout>
                    <Label Text="lebo_hang_022102" Style="{StaticResource RegularText}" />
            </VerticalStackLayout>

            <VerticalStackLayout  Grid.Row="1" Spacing="20">

                <Button Text="Edit Profile" CornerRadius="50" />
                
                <Border  StrokeShape="RoundRectangle 10"
                         Padding="10"
                        
                         Stroke="#272A2F"
                         BackgroundColor="#272A2F">
                    <VerticalStackLayout  >
                        
                        <Label Text="Member Since"  Style="{StaticResource RegularText}" FontAttributes="Bold"/>
                        <FlexLayout >
                           
                        <Label Text="Sep 6 2023" Style="{StaticResource lightText}" />
                            
                        </FlexLayout>

                    </VerticalStackLayout>
                    
                </Border>     
                
                <Border  StrokeShape="RoundRectangle 10"
                         Padding="10"
                
                         Stroke="#272A2F"
                         BackgroundColor="#272A2F">
                    <HorizontalStackLayout   >
                        
                        <Label Text="Your Friends"  Style="{StaticResource RegularText}" FontAttributes="Bold"/>
                      

                    </HorizontalStackLayout>
                    
                </Border> 
                
                <Border  StrokeShape="RoundRectangle 10"
                         Padding="10"
                        
                         Stroke="#272A2F"
                         BackgroundColor="#272A2F">
                    <HorizontalStackLayout  >
                        
                        <Label Text="Note"  Style="{StaticResource RegularText}" FontAttributes="Bold"/>
                     

                    </HorizontalStackLayout>
                    
                </Border>
                
                
            </VerticalStackLayout>
            
            
        </Grid>
     
        
        
    </Grid>
</ContentPage>